{% if (section_id|default(null)) == 'posts' %}
<div class="pop-up-partage hide">
  <div class="pop-up-partage-div">
    <div class="div-fermer-pop-up">
      <span>X</span>
    </div>
    <div class="pop-up-partage-div-btn">
      <p>Ça intéressera surement mes collègues</p>
      <a href="https://www.facebook.com/share.php?u={{ current_url }}" target="_blank">
          PARTAGER SUR FACEBOOK
      </a>
      <a href="http://twitter.com/intent/tweet?status={{ current_url }}" target="_blank">
          PARTAGER SUR TWITTER
      </a>
      <a href="https://api.whatsapp.com/send?text={{ current_url }}" target="_blank">
          PARTAGER SUR WHATSAPP
      </a>
      <div onclick="myFunction()">
          COPIER LE LIEN
      </div>
      <input type="text" value="{{ current_url }}" id="myInput">
    </div>
  </div>
</div>
{% endif %}
{% if (section_id|default(null)) == 'posts' or (section_id|default(null)) == 'forms' %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">  
      <div class="menu-header-post menu-header-post-vrai">
        <div class="menu-header-pos-div">
              {% for item in current_project.header %}

                          <a href="{{ item.url }}"
                             {% if item.openNewTab %}target="_blank" rel="noopener noreferrer"{% endif %} class="link-menu-header-post">
                              {{ item.label }}
                          </a>

                {% endfor %}
         </div>
         <div class="menu-header-post-div-link">
            <a href="">Cadre-territorial.fr</a>
         </div>
       </div>
    </div>
  </div>
</div>
{% else %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">  
      <div class="menu-header-post menu-header-page-vrai">
        <div class="menu-header-pos-div">
              {% for item in current_project.header %}

                          <a href="{{ item.url }}"
                             {% if item.openNewTab %}target="_blank" rel="noopener noreferrer"{% endif %} class="link-menu-header-page">
                              {{ item.label }}
                          </a>

                {% endfor %}
         </div>
         <div class="menu-header-page-div-link">
            <a href="">Cadre-territorial.fr</a>
         </div>
       </div>
    </div>
  </div>
</div>
{% endif %}
<div class="container">
  <div class="row">
    <div class="col-lg-12"> 

        {% if (section_id|default(null)) == 'posts' %}
        <h1 class="title-posts">{{ title }}</h1>
        {% endif %}
        {% if (section_id|default(null)) == 'forms' %}
        <h1 class="title-forms">{{ title }}</h1>
        {% endif %}
        {% if (section_id|default(null)) == 'pages' %}
        <h1 class="title-pages">{{ title }}</h1>
        {% endif %}

    {% if (section_id|default(null)) == 'posts' %}
    <div class="sous-le-titre-post">
      <div>
      {{ date }}
      </div>
      <span class="ouvrir-partage">Partager</span>
      <span class="new-share">Partager</span>
    </div>
    {% endif %}
    {% if (section_id|default(null)) == 'posts' %}
    </div>
    <div class="col-lg-7">
        <div class="new-content new-content-post">
        {{ content|raw }}
        </div>

    {% else %}
    <div class="new-content">
        {{ content|raw }}
    </div>
    {% endif %}

    </div> 
  </div>
</div>
{% if (section_id|default(null)) == 'posts' %}
<div class="article-suggere">
  <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  <div class="article-suggere-div">
                    <p>D’autres informations qui pourraient vous intéresser</p>
                    <a href="">Voir toutes les informations</a>
                  </div>
                </div>
              </div>
      {% if more|default([])|length > 0 %}
              <div class="row">
                  {% for other in more|default([]) %}
                      <div class="col-12 col-md-6 col-lg-4 article-suggere-proposition">
  
  
                              <a href="{{ other.url }}">
                                <div class="">
                                  <h2>{{ other.title }}</h2>
                                </div>
                              </a>
  
  
  
  
                      </div>
                  {% endfor %}
              </div>
  
      {% endif %}
  </div>
</div>
{% endif %}
